#%RAML 1.0 Trait
usage: Apply this to any method that needs to be used with pagination.
description: Pagination
headers:
  limit:
    description: Number of records per page.
    type: integer
    required: false
    default: 50
  offset:
    description: Defines the start position of the read pointer
    type: integer
    required: false
    default: 1